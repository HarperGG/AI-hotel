.mian {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  position: relative;
}

.detail-img {
  width: 100%;
  height: 625rpx;
  z-index: 1;
}
.detail-img-add{
  font-weight: 700;
  position: absolute;
  z-index: 100;
  width: 80rpx;
  height: 80rpx;
  color: rgb(218, 218, 218);
  right: 80rpx;
  top:130rpx;
}

.detail-img image:nth-of-type(1) {
  width: 100%;
  height: 100%;
}

/* 场所介绍 */
.detail-info {
  font-family: FZLanTingHeiS-R-GB;
  min-height: 810rpx;
  width: 100%;
  top: 550rpx;
  z-index: 100;
 background:rgba(238, 238, 238, 1);
  border-top-left-radius: 75rpx;
  border-top-right-radius: 75rpx;
  position: absolute;
  display: flex;
  justify-content: center;
}
.detail-info-content{
  width: 100%;
  height: 100%;
  margin-top: -60rpx;
  display: flex;
  justify-content: center;
}
.info-item {
  width:90%;
  height:auto;
}
.info-itemcheckbox{
  width: 100%;
  height: auto;

}
.checkbox{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 200rpx;
  margin-bottom: 40rpx;
}
.content-items{
  background:rgba(238, 238, 238, 1);
  width: 80%;
height: 100%;
 box-shadow:0px 5rpx 10rpx 1rpx rgba(13, 59, 46, 0.34);
 border-radius:18rpx;
 display: flex;
 flex-wrap: wrap;
 justify-content: center;
 align-content: space-around;
}
.content-items text{
  width: 90%;
  font-size:40rpx;
  font-family:FZHei-B01S;
  font-weight:500;
  color:rgba(16, 26, 28, 1);
}
.bottom-submit{
  position: fixed;
  bottom: 0;
  z-index: 1100;
  width: 100%;
  height: 160rpx;
  background:rgba(109, 151, 115, 1);
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.bottom-submit text{
  font-size:30rpx;
  font-family:FZHei-B01S;
  font-weight:400;
  letter-spacing: 10rpx;
  color:rgba(251, 252, 251, 1);
}
.bottom-submit view {
  width:300rpx;
  padding: 0;
  height:100rpx;
  background:rgba(13, 59, 46, 1);
  border-radius:30rpx;
  display: flex;

  justify-content: center;
  align-items: center;
  font-size:40rpx;
  font-family:FZHei-B01S;
  font-weight:500;
  color:rgba(251, 252, 251, 1);
}