page{
  height: 100%;
  width: 100%;
}
.order{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-content: flex-start;
  flex-wrap: wrap;
 background:rgba(230, 230, 230, 1);
 min-height: 95%;
}
/* 历史订单 */
.historyorder-title{
  width: 100%;
  text-align: center;
  font-size:30rpx;
  font-weight:500;
  color:rgba(4, 4, 4, 1);
  border-bottom: 2rpx solid rgba(13, 59, 46, 1);
  padding-bottom: 20rpx;
}
.order-item{
  margin-top: 40rpx;
  width: 95%;
  height: 280rpx;
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
}
.order-time{
  width:350rpx;
  height:40rpx;
  background:rgba(39, 82, 55, 1);
  border-radius:25rpx;
  font-size:18rpx;
  font-weight:400;
  letter-spacing: 8rpx;
  color:rgba(249, 253, 251, 1);
  text-align: center;
  line-height: 40rpx;
}
.order-content{
  width:100%;
  height:220rpx;
  background:rgba(255, 255, 255, 1);
  border-radius:20rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  box-shadow: 0 0 5px rgba(0, 0, 0, .1);
}
.order-content1{
  width: 40%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  letter-spacing: 8rpx;
  color:rgba(3, 3, 3, 1);
}
.order-content1 text:nth-of-type(1){
  font-size:20rpx;
  font-weight:600;
  width: 100%;
}
.order-content1 text:nth-of-type(2) {
  font-size: 18rpx;
  font-weight: 400;
   width: 100%;
}
.order-content2{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  width: 56%;
  height: auto;
}
.order-content2 text:nth-of-type(1){
  width: 100%;
font-size:40rpx;
font-weight:500;
text-align: end;
color:rgba(242, 182, 8, 1);
}
.order-content2 text:nth-of-type(2) {
  width: 100%;
  font-size: 20rpx;
  text-align: end;
  font-weight: 400;
color:rgba(3, 3, 3, 1);
margin-right: 10rpx;
}

.order-content3{
  
  font-size:20rpx;
  font-weight:400;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx 0 0;
  width: 100%;
  align-items: center;
  align-items: flex-end;
  color:rgba(3, 3, 3, 1);
  letter-spacing: 2rpx;
}
.order-content3 text {
  line-height: 20rpx !important;
  height: 30rpx;
}
.order-content3 view{
  width:140rpx;
  height: 30rpx;
  line-height: 30rpx !important;
  background:rgba(255, 255, 255, 1);
  border:2rpx solid rgba(39, 82, 55, 1);
  border-radius:12rpx;
  text-align: center;
}
/* 历史订单 */
.history-order{
  text-align: center;
  color:rgba(242, 182, 8, 1);
  font-size: 25rpx;
  margin-top: 20rpx;
  width: 100%;
  
}