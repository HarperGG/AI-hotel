.mian {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  position: relative;
}
/* loading */
.grid-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  /* display: none; */
  z-index: 10001;
  position: absolute;
  height: 100%;
  width: 100%;
  background: rgb(209, 209, 209, 0.5);
}
.swiperContent {
  position: relative;
  width: 100%;
  height: 100%;
}

.swiperContent_swiper {
  width: 100%;
  height: 100%;
}



.swiperContent_swiper .wx-swiper-dot {
  width: 30rpx;
  display: inline-flex;
  height: 30rpx;
  margin-left: 10rpx;
  margin-bottom: 80rpx;
  border: 1rpx solid #fff;
  justify-content: space-between;
}

.swiperContent_swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(0, 0, 0, 0.01);
  border-radius: 50%;
}

.swiperContent_swiper .wx-swiper-dot-active::before {
  background: #fff;
}


.swiperContent_swiper{
  height: 100%;
  width: 100%;
}
.detail-img {
  width: 100%;
  height: 625rpx;
  z-index: 1;
}

.detail-img image {
  width: 100%;
  height: 100%;
}

/* 场所介绍 */
.detail-info {
  font-family: FZLanTingHeiS-R-GB;
  height: 810rpx;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  top: 550rpx;
  z-index: 100;
  background: #fff;
  border-top-left-radius: 75rpx;
  border-top-right-radius: 75rpx;
  position: absolute;
}

.detail-left {
  width: 180rpx;
  height: 100%;
  display: flex;
  align-content: space-around;
  justify-content: center;
  flex-wrap: wrap;
  background: rgba(229, 229, 229, 1);
  border-top-left-radius: 45rpx;
  border-top-right-radius: 45rpx;
  box-sizing: border-box;
  padding-bottom: 200rpx;
}



.detail-leftinfo {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  height: auto;
}

.detail-leftinfo image {
  width: 60rpx;
  height: 60rpx;
}

.detail-leftinfo text {
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 20rpx;
}

.detail-right {
  width: 70%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  letter-spacing: 10rpx;
  align-content: space-around;
  box-sizing: border-box;
  padding-bottom: 220rpx;
  padding-left: 40rpx;
}

.detail-right-title {
  width: 100%;
  text-align: right;
  display: flex;
  flex-wrap: wrap;

}

.detail-right-title text:nth-of-type(1) {
  width: 100%;
  text-align: right;
  font-size: 45rpx;
  font-weight: bold;
}

.detail-right-title text:nth-of-type(2) {
  width: 100%;
  text-align: right;
  font-size: 20rpx;
  font-weight: 400;
}

.detail-right-roomnum {
  width: 100%;
  font-size: 28rpx;
}

.detail-right-number {
  width: 100%;
  font-size: 28rpx;
}

.detail-right-phoneNumber {
  width: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;

}

.detail-right-phoneNumber input {
  width: 72%;
  box-sizing: border-box;
}

.detail-bottom {
  position: absolute;
  height: 130rpx;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: space-between;
}

.detail-bottom-submit {
  display: flex;
  width: 75%;
  height: 100%;
  justify-content: space-around;
  box-sizing: border-box;
  padding-right: 100rpx;
  align-items: center;
  background:rgba(13, 59, 46, 1);
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  letter-spacing: 8rpx;
}
.detail-bottom-submit text:nth-of-type(1){
  font-size:40rpx;
  font-family:HYGangYiTiJ;
  font-weight:500;
  color:rgba(242, 182, 8, 1);
}
.detail-bottom-submit text:nth-of-type(2) {
  font-size: 55rpx;
  font-family: HYGangYiTiJ;
  font-weight: 600;
  color: #fff;
}
.detail-bottom-vip{
  width:120rpx;
  margin-right: 20rpx;
  height:120rpx;
  background:rgba(204, 140, 70, 1);
  border-radius:8rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  color: #fff;
  align-items: center;
}
.detail-bottom-vip text:nth-of-type(1){
  width: 100%;
  text-align: center;
  font-size: 40rpx;
}
.detail-bottom-vip text:nth-of-type(2) {
  width: 100%;
  font-size: 20rpx;
  text-align: center;
}